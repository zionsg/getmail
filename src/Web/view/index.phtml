<form method="POST" action="">
    <?php if ($form->errorMessage) : ?>
        <div class="error"><?= $form->errorMessage ?></div>
    <?php endif; ?>

    <?php foreach ($form->fields as $field => $info) : ?>
        <div class="field">
            <?php if ($info['label']) : ?>
                <label><?= $info['label'] ?></label>
            <?php endif; ?>

            <input name="<?= $field ?>" type="<?= $info['type'] ?>" placeholder="<?= $info['placeholder'] ?>"
                value="<?= ($info['value'] ?? '') ?>">

            <?php if ($info['error']) : ?>
                <div class="error"><?= $info['error'] ?></div>
            <?php endif; ?>
        </div>
    <?php endforeach; ?>
</form>

<?php if ($form->isValid) : ?>
    <b>Mail Overview:</b>
    <pre class="mail-overview"><?= $mailOverview ?></pre>

    <b>Mail Body:</b>
    <pre class="mail-body"><?= $mailBody ?></pre>
<?php endif; ?>
